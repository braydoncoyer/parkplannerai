---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import PlanWizardWithProvider from '../../components/plan-wizard/PlanWizardWithProvider';
---

<BaseLayout title="Plan My Visit | Theme Park Analytics">
  <Header />
  <main class="plan-page">
    <PlanWizardWithProvider client:only="react" />
  </main>
</BaseLayout>

<style>
  .plan-page {
    background-color: var(--theme-bg-page);
    min-height: calc(100vh - 64px);
  }
</style>
