---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import AnalyticsDashboardWithProvider from '../../components/analytics/AnalyticsDashboardWithProvider';
---

<BaseLayout title="Analytics | Theme Park Analytics">
  <Header />
  <main class="analytics-page">
    <div class="page-header">
      <div class="container">
        <h1>Analytics & Insights</h1>
        <p class="subtitle">
          Discover the best times to visit with crowd predictions and historical patterns
        </p>
      </div>
    </div>
    <AnalyticsDashboardWithProvider client:only="react" />
  </main>
  <footer class="page-footer">
    <p>© {new Date().getFullYear()} ParkPlannerAI</p>
    <p>Data from <a href="https://queue-times.com" target="_blank" rel="noopener noreferrer">Queue-Times.com</a></p>
    <p>Crafted by <a href="https://braydoncoyer.dev" target="_blank" rel="noopener noreferrer">Braydon Coyer</a></p>
  </footer>
</BaseLayout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,400;9..144,500;9..144,600;9..144,700&family=DM+Sans:wght@400;500;600;700&display=swap');

  .analytics-page {
    background-color: #fdfbf7;
    min-height: calc(100vh - 64px);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .page-header {
    padding: 40px 0 32px;
    border-bottom: 1px solid #e2e0db;
    background: linear-gradient(180deg, #fdfbf7 0%, #f8f6f1 100%);
    margin-bottom: 24px;
  }

  h1 {
    font-family: 'Fraunces', Georgia, serif;
    font-size: 32px;
    font-weight: 600;
    color: #1e293b;
    margin: 0 0 8px 0;
    letter-spacing: -0.5px;
  }

  .subtitle {
    font-family: 'DM Sans', sans-serif;
    font-size: 15px;
    color: #64748b;
    margin: 0;
  }

  @media (max-width: 600px) {
    .container {
      padding: 0 16px;
    }

    h1 {
      font-size: 26px;
    }
  }

  .page-footer {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    text-align: center;
    padding: 32px 24px;
    background: #ffffff;
    border-top: 1px solid #e2e0db;
  }

  .page-footer p {
    font-family: 'DM Sans', sans-serif;
    font-size: 13px;
    color: #94a3b8;
    margin: 0;
  }

  .page-footer p:not(:last-child)::after {
    content: '·';
    margin-left: 8px;
    color: #94a3b8;
  }

  .page-footer a {
    color: #c2410c;
    text-decoration: none;
    font-weight: 500;
  }

  .page-footer a:hover {
    text-decoration: underline;
  }

  @media (max-width: 540px) {
    .page-footer {
      flex-direction: column;
      gap: 6px;
    }

    .page-footer p:not(:last-child)::after {
      display: none;
    }
  }
</style>
